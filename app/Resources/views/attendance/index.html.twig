{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista obecności</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Data</th>
                <th>Godzina Wejścia</th>
                <th>Godzina Wyjścia</th>
                <th>Czas Pracy</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for attendance in attendances %}
            <tr>
                <td><a href="{{ path('attendance_show', { 'id': attendance.id }) }}">{{ attendance.id }}</a></td>
                <td>{% if attendance.data %}{{ attendance.data|date('Y-m-d') }}{% endif %}</td>
                <td>{% if attendance.godzinaWejscia %}{{ attendance.godzinaWejscia|date('H:i:s') }}{% endif %}</td>
                <td>{% if attendance.godzinaWyjscia %}{{ attendance.godzinaWyjscia|date('H:i:s') }}{% endif %}</td>
                <td>{{ attendance.czasPracy }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('attendance_show', { 'id': attendance.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('attendance_edit', { 'id': attendance.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('attendance_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
