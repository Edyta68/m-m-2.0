{% extends 'base.html.twig' %}

{% block body %}
    <h1>Faktura zakupu</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ purchaseInvoice.id }}</td>
            </tr>
            <tr>
                <th>Id własne</th>
                <td>{{ purchaseInvoice.fileId }}</td>
            </tr>
            <tr>
                <th>Data faktury</th>
                <td>
                    {% if purchaseInvoice.data %}
                        {{ purchaseInvoice.data|date('Y-m-d') }}
                    {% endif %}
                </td>
            <tr>
                <th>Numer faktury</th>
                <td>{{ purchaseInvoice.number }}</td>
            </tr>
            <tr>
                <th>Nazwa kontrahenta</th>
                <td>{{ purchaseInvoice.contractors.name }}</td>
            </tr>
            <tr>
                <th>Kwota netto</th>
                <td>{{ purchaseInvoice.amountNetto }}</td>
            </tr>
            <tr>
                <th>Kwota podatku VAT</th>
                <td>{{ purchaseInvoice.taxId }}</td>
            </tr>
            <tr>
                <th>Kwota brutto</th>
                <td>{{ purchaseInvoice.amountBrutto }}</td>
            </tr>
            <tr>
                <th>Kwota netto w walucie</th>
                <td>{{ purchaseInvoice.amountNettoCurrency }}</td>
            </tr>
            <tr>
                <th>Waluta</th>
                <td>{{ purchaseInvoice.currency }}</td>
            </tr>


            {% if purchaseInvoice.embeddedFile.name %}
                <tr>
                    <th>Plik</th>
                    <td><a href="{{ vich_uploader_asset(purchaseInvoice, 'file') }}">Pobierz</a></td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('purchaseinvoice_index') }}">Powrót do listy</a>
        </li>
        <li>
            <a href="{{ path('purchaseinvoice_edit', { 'id': purchaseInvoice.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
