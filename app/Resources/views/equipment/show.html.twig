{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sprzęt</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipment.id }}</td>
            </tr>
            <tr>
                <th>Nr inwentarzowy</th>
                <td>{{ equipment.nrInwentarzowy }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ equipment.nazwa }}</td>
            </tr>
            <tr>
                <th>Nr seryjny</th>
                <td>{{ equipment.nrSeryjny }}</td>
            </tr>
            <tr>
                <th>Data zakupu</th>
                <td>{% if equipment.dataZakupu %}{{ equipment.dataZakupu|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Termin gwarancji</th>
                <td>{% if equipment.terminGwarancji %}{{ equipment.terminGwarancji|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Wartosc netto</th>
                <td>{{ equipment.wartoscNetto }}</td>
            </tr>
            <tr>
                <th>Kogo sprzet</th>
                <td>{{ equipment.kogoSprzet }}</td>
            </tr>
            <tr>
                <th>Notatki</th>
                <td>{{ equipment.notatki }}</td>
            </tr>
            <tr>
                <th>Numer faktury</th>
                <td> {{ equipment.invoice.number }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipment_index') }}">Powrót do listy</a>
        </li>
        <li>
            <a href="{{ path('equipment_edit', { 'id': equipment.id }) }}">Edytuj</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
