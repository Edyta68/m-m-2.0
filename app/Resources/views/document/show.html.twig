{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dokumenty</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Id własne</th>
                <td>{{ document.iDWlasne }}</td>
            </tr>
            <tr>
                <th>Data dokumentu</th>
                <td>{% if document.dataDokumentu %}{{ document.dataDokumentu|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Strony dokumentu</th>
                <td>{{ document.stronyDokumentu }}</td>
            </tr>
            <tr>
                <th>Notatka</th>
                <td>{{ document.notatka }}</td>
            </tr>
            {% if document.embeddedFile.name %}
                <tr>
                    <th>Plik</th>
                    <td><a href="{{ vich_uploader_asset(document, 'file') }}">Pobierz</a></td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('document_index') }}">Powrót do listy</a>
        </li>
        <li>
            <a href="{{ path('document_edit', { 'id': document.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
